<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <UniformGrid Rows="4">
        <Label Content="Введите радиус:" HorizontalContentAlignment="Center" ></Label>
        <TextBox Text="{Binding Path=Rcirc}" HorizontalContentAlignment="Right" Width="Auto"></TextBox>
        <Button Content="Расчитать" Command="{Binding Path=AddCommand}" Background="Aqua"/>
        <TextBox Text="{Binding Path=Lcirc}" HorizontalContentAlignment="Right" Width="Auto"></TextBox>
    </UniformGrid>
</Window>
